<div class="chat-container">
  <div class="chat-left-container">
    <div class="chat-header chat-left-header">
      <div class="chat-left-header__profile">
        {{> Avatar 
          src="../../../static/assets/img/avatar.png"
          alt="Аватар профиля пользователя"
        }}

        {{> ChatHeaderLink text="Профиль" page="profile"}}
      </div>

      {{> ChatLeftFunctions }}
    </div>

    <div class="chat-left-content">
      {{> ChatList}}
    </div>
  </div>

  <div class="chat-right-container">
    <div class="chat-header chat-right-header">
      <div class="chat-right-header__col">
        {{> Avatar 
          src="../../../static/assets/img/avatar.png"
          alt="Аватар чата"
        }}

        {{> ChatTitle name="Иван Иванов"}}
      </div>

      <button class="chat-right-header__settings-btn"></button>
    </div>

    <!-- Доделать сообщения -->
    <div class="chat-messages">
      <span class="chat-messages__date"></span>
      <div class="chat-messages__messages">
        <div class="chat-messages__message-container">
          <p class="chat-messages__message message"></p>
          <span class="message__time"></span>
        </div>
      </div>
    </div>

    {{> ChatSendMessageBlock }}
  </div>
</div>