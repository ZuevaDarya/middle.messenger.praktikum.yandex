<main>
  {{> Navigation}}

  <div class="profile">
    {{> ProfileCloseButton page="profile"}}
    {{> ProfileAvatar}}
    
    <form class="profile-content">
      {{> ProfileInput name="first_name" type="text" title="Имя" placeholder="Иван" className="profile-item_border-green before-profile"}}
      {{> ProfileInput name="second_name" type="text" title="Фамилия" placeholder="Иванов" className="profile-item_border-green profile-item_with-margin"}}
      {{> ProfileInput name="email" type="email" title="Почта" placeholder="pochta@yandex.ru" className="profile-item_border-green before-email"}}
      {{> ProfileInput name="login" type="text" title="Логин" placeholder="ivanivanov" className="profile-item_border-green before-login"}}
      {{> ProfileInput name="display_name" title="Имя в чате" type="text" placeholder="Иван" className="profile-item_border-green before-chat-name"}}
      {{> ProfileInput name="phone" type="tel" title="Телефон" placeholder="+7 (909) 967 30 30" className="profile-item_border-green before-phone"}}

      {{> Button text="Сохранить" className="profile-data-button"}}
    </form>
  </div>
</main>
